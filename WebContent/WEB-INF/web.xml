<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
		 id="WebApp_ID" version="4.0"> <!-- 생략가능  -->

  	<!-- ContextLoaderListener(implements ServletContextListener) 등록 -->
  	<!-- Root WebApplicationContext(IoC 컨테이너) -->
  	<listener>
  		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  	</listener>
  	<context-param>
  		<!-- 설정파일의 위치를 전달해주는 파라미티명  -->
  		<param-name>contextConfigLocation</param-name><!-- 예약된(?)이름으로 작성 -->
  		<!-- 설정파일의 위치 -->
  		<param-value>classpath:spring/root/*.xml</param-value><!-- class path는 src/main/java 또는 src/main/resources를 말한다. -->
  	</context-param>
  	
  	<!-- DispatcherServlet (extends HttpServlet) 등록 -->
  	<!-- WepApplicationContext(IoC 컨테이너) -->
  	<servlet>
  		<servlet-name>DispatcherServlet</servlet-name>
  		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  		<init-param>
  			<!-- 설정파일의 위치를 전달해주는 파라미터명 -->
  			<param-name>contextConfigLocation</param-name>
  			<!-- 설정파일의 위치 -->
  			<param-value>classpath:spring/dispatcher/*.xml</param-value>
  		</init-param>
  		<load-on-startup>1</load-on-startup>
  	</servlet>
  	
  	<servlet-mapping>
  		<servlet-name>DispatcherServlet</servlet-name>
  		<url-pattern>/</url-pattern> <!-- 매핑하지 않은 모든 경로 지정 -->
  	</servlet-mapping>
  	
  	
  	
  	<!-- 문자 인코딩을 위한 필터 등록 -->
  	<filter>
  		<filter-name>CharacterEncodingFilter</filter-name>
  		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
  		<init-param>
  			<param-name>encoding</param-name>
  			<param-value>UTF-8</param-value>
  		</init-param>
  	</filter>
  	
  	<filter-mapping>
  		<filter-name>CharacterEncodingFilter</filter-name>
  		<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	
  	<error-page>
  		<error-code>404</error-code>
  		<location>/WEB-INF/views/ch10/error404.jsp</location>
  	</error-page>
</web-app>